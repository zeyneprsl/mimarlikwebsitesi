<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title><%= project.name || 'Proje Detayı' %></title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; background: #faf9f6; color: #222; margin: 0; }
        .detail-header { position: relative; width: 100%; height: 350px; background: #222; overflow: hidden; }
        .detail-header img { width: 100%; height: 100%; object-fit: cover; opacity: 0.7; }
        .detail-title { position: absolute; left: 0; right: 0; top: 50%; transform: translateY(-50%); text-align: center; color: #fff; font-size: 2.5rem; font-weight: bold; text-shadow: 0 2px 12px #000; }
        .detail-content { max-width: 800px; margin: -100px auto 0 auto; background: #fff; border-radius: 18px; box-shadow: 0 2px 24px #eee; padding: 2rem; position: relative; z-index: 2; }
        .detail-main-img { width: 100%; border-radius: 12px; box-shadow: 0 2px 12px #ddd; margin-bottom: 1.5rem; }
        .detail-desc { font-size: 1.15rem; margin-bottom: 1.5rem; text-align: center; }
        .detail-gallery { display: flex; gap: 1rem; justify-content: center; margin-top: 1.5rem; }
        .detail-gallery img { width: 120px; height: 80px; object-fit: cover; border-radius: 8px; box-shadow: 0 1px 6px #ccc; }
    </style>
</head>
<body>
    <div class="detail-header">
        <img src="<%= project.headerImage || '/uploads/sample-header.jpg' %>" alt="<%= project.name %>">
        <div class="detail-title"><%= project.name || 'Proje Adı' %></div>
    </div>
    <div class="detail-content">
        <img src="<%= project.mainImage || project.image || '/uploads/sample-main.jpg' %>" alt="<%= project.name %>" class="detail-main-img">
        <div class="detail-desc">
            <%= project.desc || '' %>
        </div>
        <% if (project.year || project.city) { %>
        <div style="text-align:center; margin-bottom:1.5rem; color:#888;">
            <% if (project.year) { %><%= project.year %><% } %>
            <% if (project.year && project.city) { %> | <% } %>
            <% if (project.city) { %><%= project.city %><% } %>
        </div>
        <% } %>
        <% if (project.gallery && project.gallery.length > 0) { %>
        <div class="detail-gallery">
            <% project.gallery.forEach(function(img, i){ %>
                <img src="<%= img %>" alt="Galeri <%= i+1 %>">
            <% }) %>
        </div>
        <% } %>
    </div>
</body>
</html> 